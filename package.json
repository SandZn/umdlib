{
  "name": "umdlib",
  "version": "0.7.1",
  "description": "A template for writing micro UMD Javascript libraries",
  "main": "index.js",
  "bin": {
    "umdlib": "./bin/umdlib.js"
  },
  "scripts": {
    "build": "gulp build",
    "watch": "gulp watch",
    "makedist": "gulp",
    "makeprivate": "gulp makeprivatepackage && sh tasks/compress.sh $npm_package_name $npm_package_version",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha ./test/main.js",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report",
    "precommit": "npm run makedist && npm run test && npm run check-coverage && npm run report",
    "doc": "cd docs && ../node_modules/.bin/gitbook --port 9999 serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/umdlib.git"
  },
  "keywords": [
    "UMD",
    "library",
    "template",
    "boilerplate",
    "instantiation patterns",
    "functional instantiation",
    "functional-shared instantiation",
    "prototypal instantiation",
    "pseudoclassical instantiation",
    "pseudoclassical auto instantiation",
    "gitbook"
  ],
  "author": {
    "name": "jclo",
    "email": "jclo@mobilabs.fr",
    "url": "http://www.mobilabs.fr/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/umdlib/issues"
  },
  "homepage": "https://github.com/jclo/umdlib",
  "dependencies": {
    "nopt": "4.0.1",
    "path": "0.12.7"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "del": "3.0.0",
    "eslint": "5.4.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "gitbook-cli": "2.3.2",
    "gulp": "3.9.1",
    "gulp-concat": "2.6.1",
    "gulp-footer": "2.0.1",
    "gulp-header": "2.0.5",
    "gulp-replace": "1.0.0",
    "gulp-uglify": "3.0.1",
    "husky": "0.14.3",
    "mocha": "5.2.0",
    "nyc": "13.0.1",
    "opener": "1.5.1",
    "require-dir": "1.0.0",
    "run-sequence": "2.2.1"
  },
  "private": false
}
