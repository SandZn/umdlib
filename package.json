{
  "name": "umdlib",
  "version": "0.2.7",
  "description": "A template for writing micro UMD Javascript libraries",
  "main": "index.js",
  "bin": {
    "umdlib": "./bin/umdlib.js"
  },
  "scripts": {
    "test": "istanbul cover -x ./test/main.js _mocha -- -R spec ./test/main.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/umdlib.git"
  },
  "keywords": [
    "UMD",
    "library",
    "template",
    "boilerplate"
  ],
  "author": {
    "name": "jclo",
    "email": "jclo@mobilabs.fr",
    "url": "http://www.mobilabs.fr/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/umdlib/issues"
  },
  "homepage": "https://github.com/jclo/umdlib",
  "dependencies": {
    "nopt": "3.0.6",
    "path": "0.12.7"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.9",
    "ghooks": "1.2.1",
    "istanbul": "0.4",
    "mocha": "2.4.5",
    "opener": "1.4.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
